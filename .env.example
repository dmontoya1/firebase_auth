# =====================================================
# Configuración del Microservicio de Autenticación
# =====================================================

# Información del proyecto
PROJECT_NAME=firebase_auth_service
ENVIRONMENT=development
DEBUG=true

# =====================================================
# Configuración de Base de Datos PostgreSQL
# =====================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=auth_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =====================================================
# Configuración de Firebase / Identity Platform
# =====================================================

# OPCIÓN 1: Usar Google Cloud Secret Manager (RECOMENDADO para producción)
USE_SECRET_MANAGER=true
GCP_PROJECT_ID=your-gcp-project-id
FIREBASE_CREDENTIALS_SECRET_NAME=firebase-service-account-key

# OPCIÓN 2: Usar archivo JSON local (solo para desarrollo local)
# USE_SECRET_MANAGER=false
# FIREBASE_CREDENTIALS_PATH=./credentials/service-account-key.json

# =====================================================
# Configuración Multi-tenant
# =====================================================
# Nombre de la columna discriminadora de tenant en las tablas
TENANT_ID_COLUMN_NAME=tenant_id

# Nombre de la variable de sesión PostgreSQL para RLS
# No cambiar a menos que sepas lo que haces
RLS_SETTING_NAME=app.current_tenant

# =====================================================
# Configuración de Seguridad (CORS)
# =====================================================
# Lista de orígenes permitidos separados por comas
# Para desarrollo: ["*"]
# Para producción: ["https://yourdomain.com", "https://app.yourdomain.com"]
ALLOWED_ORIGINS=["*"]
